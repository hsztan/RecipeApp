<h2>Shopping List</h2>
<div class="shopping-list-header">
<h4>Amount of food items to buy: <%=@shopping_list.count%></h4>
<h4>Total value of food needed: <%=@total_price%></h4>
</div>
<div class="shopping-list">
  <table>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% @shopping_list.each do |food, (key, val)| %>
    <tr>
      <td><%= food %></td>
      <td><%= key[:quantity] %> <%= key[:units] %></td>
      <td><%= key[:price] %></td>
    </tr>
    <% end %>
  </table>
</div>
